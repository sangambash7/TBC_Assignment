{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./dist/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/[[...slug]]/page.jsx",
    ".next/types/**/*.ts",
    "src/app/[locale]/(auth)/Contact/page.tsx",
    "src/app/[locale]/(auth)/Profile/page.js",
    "src/app/[locale]/(auth)/Blogs/[id]/page.tsx",
    "src/app/[locale]/(auth)/layout.jsx",
    "src/app/[locale]/global-error.js"
  ],
  "exclude": ["node_modules"]
}
